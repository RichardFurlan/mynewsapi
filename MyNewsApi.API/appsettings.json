{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "NewsDb": "Host=localhost;Port=5432;Database=newsdb;Username=postgres;Password=postgres"
  },
  "NewsApi": {
    "ApiKey": "<NEWS_API_KEY>"
  },
  "Jwt": {
    "Key": "<JWT_SECRET_KEY>",
    "Issuer": "MyNewsApi",
    "Audience": "MyNewsApiUsers",
    "ExpireHours": "2"
  },
  "Auth": {
    "AllowSelfPromotion": true
  }
}
